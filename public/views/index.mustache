<!DOCTYPE html>
<html>
  <head>
    <link rel="stylesheet" href="./css/styles.css">
    <meta charset="utf-8">
    <title>Gabble</title>
  </head>
  <body>

    <header>
      <h1>CLUCK</h1>
      <nav>
        <li><a href="/">home</a></li>
        <li><a href="/newuser">signup</a></li>
        <li><a href="/login">login</a></li>
        <li><a href="/logout">logout</a></li>
      </nav>
    </header>

{{#authenticated}}
<h1>Welcome, {{currentUser}}</h1>
  <div class="newpost">
    <form id="newpost" action="/" method="post">
      <h2>New post</h2><br>
      <label for="postTitle">title</label>
      <input type="text" name="postTitle"><br>

      <textarea name="postBody" rows="2" cols="80" maxlength="141" placeholder="write your comment here"></textarea>
      <button type="submit" name="new-post-submit"></button>
    </form>
  </div>

  <div class="post-errors">
    <ul>
      {{#postErr}}
      <li>{{msg}}</li>
      {{/postErr}}
    </ul>
  </div>
{{/authenticated}}


{{^authenticated}}
<h1>Welcome.</h1>
<h2>Please log in to post</h2>
{{/authenticated}}



  {{#user}}
  <div class="posts">
    {{#posts}}
    <ul>
      <li>{{name}}</li>
      <li>{{title}}</li>
      <li>{{body}}</li>

      <ul>
        {{#likes}}
        <li>{{user.name}} likes this post</li>
        {{/likes}}
      </ul>

      <form class="like-button" action="/" method="post">
        <input hidden="hidden" type="text" name="postItteration" value="{{id}}">
        {{#authenticated}}<button type="submit" name="like">like</button>{{/authenticated}}
      </form>

      {{#owner}}
      <form class="" action="/" method="post">
        {{#authenticated}}<button type="submit" name="deletepost" value="{{id}}">delete</button>{{/authenticated}}
      </form>
      {{/owner}}
    </ul>
    {{/posts}}
  </div>
  {{/user}}











    <script src="./scripts.js" charset="utf-8"></script>
  </body>
</html>
